<Page x:Class="Control8.AddGroupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Control8"
      mc:Ignorable="d" 
      d:DesignHeight="430" d:DesignWidth="560"
      Title="AddGroupPage">

    <Grid Background="White" >
        <Grid.RowDefinitions>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="98*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Введите группу" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1"/>
        <TextBox Grid.Column="1" Grid.Row="3" Name="GroupTB" BorderThickness="2"/>
        <TextBlock Text="Выберите специальность" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"
                   Grid.Column="1" Grid.Row="5" />
        <ComboBox Name="SpecialCmb" Grid.Column="1" Grid.Row="7" BorderThickness="2"/>

        <Button Content="Добавить" Grid.Column="1" Grid.Row="9" BorderThickness="2" Click="Button_Click"/>
    </Grid>
</Page>
