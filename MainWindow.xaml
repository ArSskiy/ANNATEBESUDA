<Window x:Class="Control8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Control8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        
        <Image Source="/Image/fonn.JPG" Grid.Column="1"/>
        <Frame Name="MainFrame" Grid.Column="1"/>
        <StackPanel Background="Orange">
            <Separator Height="70" Opacity="0"/>
            <TextBlock Text="Добавить группу" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" Foreground="White"
                       MouseLeftButtonUp="TextBlock_MouseLeftButtonUp"/>
            <Separator Height="30" Opacity="0"/>
            <TextBlock Text="Добавить активность" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" Foreground="White"
                       MouseLeftButtonUp="TextBlock_MouseLeftButtonUp_1"/>
            <Separator Height="30" Opacity="0"/>
            <TextBlock Text="Учёт" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" Foreground="White"
                       MouseLeftButtonUp="TextBlock_MouseLeftButtonUp_2"/>
            <Separator Height="30" Opacity="0"/>
            <TextBlock Text="Отчёт 1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" Foreground="White" MouseLeftButtonUp="TextBlock_MouseLeftButtonUp_3"/>
            <Separator Height="30" Opacity="0"/>
            <TextBlock Text="Отчёт 2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
